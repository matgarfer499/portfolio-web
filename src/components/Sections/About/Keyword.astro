---
interface Props {
  dataIndex: string;
  multiPhoto?: boolean;
}

const { dataIndex, multiPhoto = false } = Astro.props;
---

<span 
  class:list={["keyword", { "multi-photo": multiPhoto }]} 
  data-index={dataIndex}><slot /></span>

<style>
  .keyword {
    font-family: "Courier New", monospace;
    background: rgba(235, 94, 40, 0.15);
    border-bottom: 2px solid var(--color-accent);
    padding: 0.125rem 0.375rem;
    border-radius: 0.25rem;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    color: var(--color-text-light);
  }

  .keyword:hover {
    background: rgba(235, 94, 40, 0.25);
    border-bottom-color: var(--color-accent);
    transform: translateY(-2px);
  }

  .keyword.revealed {
    background: rgba(235, 94, 40, 0.3);
    border-bottom-color: var(--color-accent);
    color: var(--color-accent);
  }
</style>
