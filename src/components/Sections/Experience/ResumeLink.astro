---
/**
 * ResumeLink Component
 * Link to view full resume with easter egg trophy unlock
 */
import ArrowUpRight from '@components/Icons/ArrowUpRight.astro';
---

<div class="flex justify-end items-center pt-4 max-w-5xl mx-auto">
  <a
    id="resume-link"
    href="/Matías-José-García-Fernández-CV.pdf"
    target="_blank"
    class="inline-flex items-center gap-2 text-sm font-medium transition-all duration-200 group text-[var(--color-accent)]"
  >
    <span>View Full CV</span>
    <ArrowUpRight extraClasses="h-4 w-4 transition-transform duration-200 group-hover:translate-x-0.5 group-hover:-translate-y-0.5" />
  </a>
</div>

<script>
  // Easter egg for viewing resume
  const resumeLink = document.getElementById('resume-link');
  resumeLink?.addEventListener('click', () => {
    (window as any).unlockTrophy?.('RESUME_READER');
  });
</script>
