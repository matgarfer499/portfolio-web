---
/**
 * ResumeLink Component
 * Link to view full resume with easter egg trophy unlock
 */
import ArrowUpRight from '@components/Icons/ArrowUpRight.astro';
---

<div class="flex justify-end items-center pt-4 max-w-5xl mx-auto text-[var(--color-primary)] group">
  <a
    id="resume-link"
    href="/cv.pdf"
    target="_blank"
    class="group inline-flex items-center gap-2 font-semibold hover:text-neutral-600 dark:hover:text-neutral-400 transition-colors duration-200"
  >
    <span>View Full CV</span>
  </a>
  <ArrowUpRight extraClasses="h-4 w-4" />
</div>

<script>
  // Easter egg for viewing resume
  const resumeLink = document.getElementById('resume-link');
  resumeLink?.addEventListener('click', () => {
    (window as any).unlockTrophy?.('RESUME_READER');
  });
</script>
