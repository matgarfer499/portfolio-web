---
import TagWithLabel from "./TagWithLabel.astro";
import TagWithUrl from "./TagWithUrl.astro";

interface Props {
  label?: string;
  icon?: any;
  url?: string;
  variant?: "social" | "tech";
}

const { label, icon, url, variant = "social" } = Astro.props;
---

{label ? (
  <TagWithLabel label={label} icon={icon} variant={variant} />
) : url ? (
  <TagWithUrl icon={icon} url={url} />
) : null}
