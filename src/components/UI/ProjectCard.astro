---
import type { Project } from "@/types/project";
import Tag from "@components/UI/Tag.astro";
import ArrowUpRight from "@components/Icons/ArrowUpRight.astro";
import { getTechIcon } from "@utils/techIcons";
import { Image } from "astro:assets";

interface Props extends Project {}

const {
  name,
  description,
  technologies,
  desktopImage,
  mobileImage,
  demoUrl,
  repoUrl,
  year,
} = Astro.props;
---

<div class="project-card opacity-0">
  <!-- Frosted Glass Card -->
  <div class="glass-card rounded-2xl sm:rounded-3xl p-4 sm:p-6 md:p-8 bg-[var(--color-primary-light)]/50 transition-colors ring-1 ring-black/5" >
    <div class="screenshots-section mb-4 sm:mb-6 md:mb-8 relative flex items-center justify-center">
      <div class="desktop-screenshot relative mx-auto">
        <Image
          src={desktopImage}
          alt={`${name} desktop view`}
          width={1200}
          height={675}
          class="w-full h-auto rounded-lg"
        />
        
        <div class="mobile-screenshot absolute bottom-2 right-2 sm:bottom-3 sm:right-3 md:bottom-4 md:right-4 w-20 sm:w-28 md:w-32 z-10">
          <Image
            src={mobileImage}
            alt={`${name} mobile view`}
            width={128}
            height={256}
            class="w-full h-auto rounded-sm"
          />
        </div>
      </div>
    </div>

    <!-- Content Section -->
    <div class="content-section">
      <!-- Header Row: Title | Year -->
      <div class="flex flex-col sm:flex-row items-start sm:items-center justify-start gap-2 sm:gap-4 mb-3 sm:mb-4">
        <!-- Project Title -->
        <h3 class="text-lg sm:text-xl text-[var(--color-primary)] font-semibold">
          {name}
        </h3>
        <!-- Year -->
        <span class="text-xs text-[var(--color-text-muted)]">({year})</span>
      </div>

      <!-- Description -->
      <p class="text-xs sm:text-sm leading-relaxed mb-3 sm:mb-4 text-[var(--color-text-muted)]">
        {description}
      </p>

      <!-- Technologies Tags -->
      <div class="mb-4 sm:mb-6">
        <div class="flex flex-wrap gap-1.5 sm:gap-2">
          {technologies.map((tech) => {
            const Icon = getTechIcon(tech);
            return <Tag label={tech} icon={Icon} />;
          })}
        </div>
      </div>

      <!-- Call to Action - Simple text link with arrow -->
      {
        (demoUrl || repoUrl) && (
          <div class="flex flex-wrap gap-4 justify-end items-center">
            {demoUrl && (
              <a
                href={demoUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="project-demo-link inline-flex items-center gap-2 text-xs sm:text-sm font-medium transition-all duration-200 group text-[var(--color-accent)]"
              >
                <span>Visit Website</span>
                <ArrowUpRight extraClasses="h-3 w-3 sm:h-4 sm:w-4 transition-transform duration-200 group-hover:translate-x-0.5 group-hover:-translate-y-0.5" />
              </a>
            )}
          </div>
        )
      }
    </div>
  </div>
</div>

<script>
  // Easter egg for clicking demo links
  document.querySelectorAll('.project-demo-link').forEach(link => {
    link.addEventListener('click', () => {
      (window as any).unlockTrophy?.('PROJECT_TESTER');
    });
  });
</script>

<style>
  .project-card {
    opacity: 0;
    transition: opacity 0.8s ease-out;
    max-width: 1200px;
    margin: 0 auto 2rem auto;
  }

  .project-card.visible {
    opacity: 1;
  }

  .glass-card {
    transition: all 0.3s ease;
  }

  .screenshots-section {
    opacity: 0;
    transition: opacity 1s ease-out;
    transition-delay: 0.2s;
  }

  .project-card.visible .screenshots-section {
    opacity: 1;
  }

  .content-section {
    opacity: 0;
    transition: opacity 0.8s ease-out;
    transition-delay: 0.4s;
  }

  .project-card.visible .content-section {
    opacity: 1;
  }
</style>
