---
import type { Project } from "@/types/project";
import Tag from "@components/UI/Tag.astro";
import GitHub from "@components/Icons/GitHub.astro";
import ArrowUpRight from "@components/Icons/ArrowUpRight.astro";

interface Props extends Project {}

const {
  name,
  description,
  technologies,
  desktopImage,
  mobileImage,
  demoUrl,
  repoUrl,
} = Astro.props;
---

<div class="project-card opacity-0">
  <!-- Frosted Glass Card -->
  <div class="glass-card rounded-3xl p-8 md:p-4 bg-[var(--color-primary-light)]/50 transition-colors ring-1 ring-black/5" >
    <!-- Screenshots Section -->
    <div class="screenshots-section mb-8 relative flex items-center justify-center">
      <!-- Desktop Screenshot -->
      <div class="desktop-screenshot relative mx-auto">
        <img
          src={desktopImage}
          alt={`${name} desktop view`}
          class="w-full h-auto"
        />
        
        <!-- Mobile Screenshot - Overlaid on top right -->
        <div class="mobile-screenshot absolute bottom-0 right-4 w-24 md:w-32 z-10">
          <img
            src={mobileImage}
            alt={`${name} mobile view`}
            class="w-full h-auto"
          />
        </div>
      </div>
    </div>

    <!-- Content Section -->
    <div class="content-section">
      <!-- Title -->
      <h3 class="text-3xl md:text-4xl font-bold mb-4 text-[var(--color-accent)]">
        {name}
      </h3>

      <!-- Technologies Tags -->
      <div class="mb-6">
        <div class="flex flex-wrap gap-2">
          {technologies.map((tech) => <Tag label={tech} icon={GitHub} variant="tech" />)}
        </div>
      </div>

      <!-- Description -->
      <p class="leading-relaxed mb-6" style="color: var(--color-text-muted);">
        {description}
      </p>

      <!-- Call to Action Buttons -->
      {
        (demoUrl || repoUrl) && (
          <div class="flex flex-wrap justify-end">
            {demoUrl && (
              <a
                href={demoUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="project-demo-link inline-flex items-center gap-2 px-6 py-2.5 font-medium rounded-lg transition-all duration-200"
                style="background-color: var(--color-accent); color: var(--color-primary-lightest);"
              >
                <span>Try it</span>
                <ArrowUpRight extraClasses="h-4 w-4" />
              </a>
            )}
          </div>
        )
      }
    </div>
  </div>
</div>

<script>
  // Easter egg for clicking demo links
  document.querySelectorAll('.project-demo-link').forEach(link => {
    link.addEventListener('click', () => {
      (window as any).unlockTrophy?.('PROJECT_TESTER');
    });
  });
</script>

<style>
  .project-card {
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    max-width: 1200px;
    margin: 0 auto;
  }

  .project-card.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Frosted glass effect */
  .glass-card {
    transition: all 0.3s ease;
  }

  /* Screenshot animations */
  .screenshots-section {
    opacity: 0;
    transform: translateY(20px);
    transition: all 1s cubic-bezier(0.4, 0, 0.2, 1);
    transition-delay: 0.2s;
  }

  .project-card.visible .screenshots-section {
    opacity: 1;
    transform: translateY(0);
  }

  /* Content section animation */
  .content-section {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    transition-delay: 0.4s;
  }

  .project-card.visible .content-section {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .screenshots-section {
      flex-direction: column;
      gap: 1rem;
    }

    .desktop-screenshot {
      max-width: 100%;
    }

    .mobile-screenshot {
      width: 50%;
    }
  }
</style>
