---
import type { Project } from "@/types/project";
import Tag from "@components/UI/Tag.astro";
import ArrowUpRight from "@components/Icons/ArrowUpRight.astro";
import { getTechIcon } from "@utils/techIcons";
import { Image } from "astro:assets";

interface Props extends Project {}

const {
  name,
  description,
  technologies,
  desktopImage,
  mobileImage,
  demoUrl,
  repoUrl,
  year,
} = Astro.props;
---

<div class="project-card opacity-0">
  <!-- Frosted Glass Card -->
  <div class="glass-card rounded-3xl p-8 md:p-4 bg-[var(--color-primary-light)]/50 transition-colors ring-1 ring-black/5" >
    <div class="screenshots-section mb-8 relative flex items-center justify-center">
      <div class="desktop-screenshot relative mx-auto">
        <Image
          src={desktopImage}
          alt={`${name} desktop view`}
          width={1200}
          height={675}
          class="w-full h-auto"
        />
        
        <div class="mobile-screenshot absolute bottom-0 right-4 w-24 md:w-32 z-10">
          <Image
            src={mobileImage}
            alt={`${name} mobile view`}
            width={128}
            height={256}
            class="w-full h-auto"
          />
        </div>
      </div>
    </div>

    <!-- Content Section -->
    <div class="content-section">
      <!-- Header Row: Title | Year -->
      <div class="flex items-center justify-start gap-6 mb-4">
        <!-- Project Title -->
        <h3 class="text-xl text-[var(--color-primary)] font-semibold">
          {name}  <span class="text-xs text-[var(--color-text-muted)]">({year})</span>
        </h3>
        <!-- Year -->

      </div>

      <!-- Description -->
      <p class="text-sm leading-relaxed mb-4" style="color: var(--color-text-muted);">
        {description}
      </p>

      <!-- Technologies Tags -->
      <div class="mb-6">
        <div class="flex flex-wrap gap-2">
          {technologies.map((tech) => {
            const Icon = getTechIcon(tech);
            return <Tag label={tech} icon={Icon} />;
          })}
        </div>
      </div>

      <!-- Call to Action - Simple text link with arrow -->
      {
        (demoUrl || repoUrl) && (
          <div class="flex flex-wrap gap-4 justify-end items-center">
            {demoUrl && (
              <a
                href={demoUrl}
                target="_blank"
                rel="noopener noreferrer"
                class="project-demo-link inline-flex items-center gap-2 text-sm font-medium transition-all duration-200 group"
                style="color: var(--color-accent);"
              >
                <span>Visit Website</span>
                <ArrowUpRight extraClasses="h-4 w-4 transition-transform duration-200 group-hover:translate-x-0.5 group-hover:-translate-y-0.5" />
              </a>
            )}
          </div>
        )
      }
    </div>
  </div>
</div>

<script>
  // Easter egg for clicking demo links
  document.querySelectorAll('.project-demo-link').forEach(link => {
    link.addEventListener('click', () => {
      (window as any).unlockTrophy?.('PROJECT_TESTER');
    });
  });
</script>

<style>
  .project-card {
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    max-width: 1200px;
    margin: 0 auto;
  }

  .project-card.visible {
    opacity: 1;
    transform: translateY(0);
  }

  /* Frosted glass effect */
  .glass-card {
    transition: all 0.3s ease;
  }

  /* Screenshot animations */
  .screenshots-section {
    opacity: 0;
    transform: translateY(20px);
    transition: all 1s cubic-bezier(0.4, 0, 0.2, 1);
    transition-delay: 0.2s;
  }

  .project-card.visible .screenshots-section {
    opacity: 1;
    transform: translateY(0);
  }

  /* Content section animation */
  .content-section {
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    transition-delay: 0.4s;
  }

  .project-card.visible .content-section {
    opacity: 1;
    transform: translateY(0);
  }

  @media (max-width: 768px) {
    .screenshots-section {
      flex-direction: column;
      gap: 1rem;
    }

    .desktop-screenshot {
      max-width: 100%;
    }

    .mobile-screenshot {
      width: 50%;
    }
  }
</style>
