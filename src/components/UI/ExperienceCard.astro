---
import type { Experience } from "../../types/experience";

interface Props extends Experience {
  index: number;
}

const { company, logo, position, startDate, endDate, description, current, index } = Astro.props;
---

<div 
    class="timeline-item relative flex items-center min-h-[300px]"
    data-index={index}
>
    <!-- Company Logo (centered vertically with card) -->
    <div class="absolute left-1/2 -translate-x-1/2 top-1/2 -translate-y-1/2 z-10">
        <div class="w-16 h-16 rounded-full bg-white dark:bg-neutral-900 border-4 border-neutral-300 dark:border-neutral-700 flex items-center justify-center overflow-hidden shadow-lg">
            <img
                src={logo}
                alt={`${company} logo`}
                class="w-10 h-10 object-contain"
            />
        </div>
    </div>

    <!-- Card (alternating sides) -->
    <div class={`flex w-full ${index % 2 === 0 ? 'justify-start pr-[55%]' : 'justify-end pl-[55%]'}`}>
        <div class="experience-card w-full bg-white dark:bg-neutral-900 border border-neutral-200 dark:border-neutral-800 rounded-2xl p-6 shadow-lg hover:shadow-xl transition-all duration-300">
            <!-- Header -->
            <div class="space-y-2 mb-4">
                <h3 class="text-xl font-bold text-neutral-900 dark:text-neutral-100">
                    {position}
                </h3>
                <div class="flex items-center gap-2 text-sm text-neutral-600 dark:text-neutral-400">
                    <span class="font-medium">{startDate} - {endDate}</span>
                    {current && (
                        <span class="px-2 py-0.5 text-xs font-semibold bg-green-500 text-white rounded-full">
                            Current
                        </span>
                    )}
                </div>
            </div>

            <!-- Description -->
            <p class="text-sm text-neutral-700 dark:text-neutral-300 leading-relaxed">
                {description}
            </p>
        </div>
    </div>
</div>

<style>
    .timeline-item {
        opacity: 0;
        transform: translateY(40px);
        transition: opacity 0.6s cubic-bezier(0.16, 1, 0.3, 1),
                    transform 0.6s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .timeline-item.visible {
        opacity: 1;
        transform: translateY(0);
    }

    .experience-card {
        transform: scale(0.95);
        transition: all 0.3s ease;
    }

    .timeline-item.visible .experience-card {
        transform: scale(1);
    }
</style>
