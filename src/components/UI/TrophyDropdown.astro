---
import { TROPHIES } from '../../utils/easter-eggs';

// Define trophy points mapping
const TROPHY_POINTS: Record<string, number> = {
  'PHOTO_COLLECTOR': 50,
  'CONSOLE_EXPLORER': 50,
  'PROJECT_TESTER': 50,
  'RESUME_READER': 50,
  'LOCATION_FINDER': 25,
  'THEME_SWITCHER': 25,
  'SECTION_EXPLORER': 25,
  'PLATINUM_COLLECTOR': 20,
};

// Convert TROPHIES object to array with points
const trophiesArray = Object.values(TROPHIES).map(trophy => ({
  ...trophy,
}));
---

<div id="trophy-dropdown" class="trophy-dropdown hidden">
  <!-- Header -->
  <div class="px-[18px] py-3.5 border-b border-[var(--color-primary-light)]">
    <div class="flex justify-between items-center">
      <h3 class="text-[15px] font-semibold text-[var(--color-primary-dark)] m-0">
        Trophies
      </h3>
      <button 
        id="reset-trophies-btn" 
        class="reset-btn p-1.5 bg-transparent border-none text-[var(--color-text-light)] cursor-pointer rounded-md transition-all duration-200 opacity-60 hover:bg-[var(--color-accent)] hover:text-[var(--color-primary-lightest)] hover:opacity-100"
        title="Reset Progress"
        aria-label="Reset trophy progress"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="reset-icon w-4 h-4 transition-transform duration-300" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <path d="M3 12a9 9 0 0 1 9-9 9.75 9.75 0 0 1 6.74 2.74L21 8"/>
          <path d="M21 3v5h-5"/>
          <path d="M21 12a9 9 0 0 1-9 9 9.75 9.75 0 0 1-6.74-2.74L3 16"/>
          <path d="M3 21v-5h5"/>
        </svg>
      </button>
    </div>
  </div>
  
  <!-- Trophy List -->
  <div class="trophy-list max-h-[420px] overflow-y-auto px-4 py-3">
    {trophiesArray.map((trophy) => {
      const isPlatinum = trophy.id === 'PLATINUM_COLLECTOR';
      return (
        <div 
          class={`trophy-item flex items-start gap-3 p-3 rounded-[10px] mb-2 transition-all duration-200 bg-[var(--color-primary-lightest)] border border-[var(--color-primary-light)] hover:bg-[var(--color-primary-lighter)] hover:shadow-sm ${isPlatinum ? 'platinum' : ''}`}
          data-trophy-id={trophy.id}
        >
          {/* Icon */}
          <div class={`trophy-icon flex-shrink-0 w-9 h-9 flex items-center justify-center rounded-lg text-xl mt-0 ${isPlatinum ? 'platinum-icon' : ''}`}>
            {trophy.icon}
          </div>
          
          {/* Details */}
          <div class="flex-1 min-w-0">
            <div class="flex items-center gap-1.5 mb-1">
              <span class="trophy-title text-sm font-semibold text-[var(--color-primary-dark)] leading-tight">
                {trophy.title}
              </span>
            </div>
            <p class="text-xs text-[var(--color-text-light)] opacity-80 m-0 leading-snug">
              {trophy.description}
            </p>
          </div>
        </div>
      );
    })}
  </div>
</div>

<style>
  .trophy-dropdown {
    position: absolute;
    top: calc(100% + 8px);
    right: 0;
    width: 340px;
    max-height: 480px;
    background: var(--color-primary-lightest);
    border-radius: 12px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    border: 1px solid var(--color-primary-light);
    overflow: hidden;
    z-index: 100;
    opacity: 0;
    transform: translateY(-10px) scale(0.95);
    transition: opacity 0.2s ease, transform 0.2s ease;
  }

  .trophy-dropdown.show {
    opacity: 1;
    transform: translateY(0) scale(1);
  }

  /* Scrollbar styling */
  .trophy-list::-webkit-scrollbar {
    width: 6px;
  }

  .trophy-list::-webkit-scrollbar-track {
    background: transparent;
  }

  .trophy-list::-webkit-scrollbar-thumb {
    background: var(--color-primary-light);
    border-radius: 3px;
  }

  .trophy-list::-webkit-scrollbar-thumb:hover {
    background: var(--color-accent);
  }

  /* Trophy item states */
  .trophy-item.locked {
    opacity: 0.5;
  }

  .trophy-item.locked:hover {
    background: var(--color-primary-lightest) !important;
    box-shadow: none !important;
  }

  /* Trophy icons */
  .trophy-icon {
    background: var(--color-primary-lighter);
  }

  .trophy-item.unlocked .trophy-icon {
    background: linear-gradient(135deg, var(--color-accent) 0%, #ff7a47 100%);
  }

  .trophy-item.platinum .platinum-icon {
    background: linear-gradient(135deg, #b4e0f6 0%, #c5e3f7 100%);
    box-shadow: 0 2px 12px rgba(180, 224, 246, 0.4);
  }

  .trophy-item.locked .trophy-icon {
    background: var(--color-primary-light);
    filter: grayscale(1);
    opacity: 0.5;
  }

  /* Locked text states */
  .trophy-item.locked .trophy-title {
    color: var(--color-text-light);
  }

  .trophy-item.locked .trophy-points {
    color: var(--color-text-light);
    opacity: 0.6;
  }

  .trophy-item.locked p {
    opacity: 0.5;
  }

  /* Reset button icon rotation */
  .reset-btn:hover .reset-icon {
    transform: rotate(-180deg);
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .trophy-dropdown {
      width: calc(100vw - 40px);
      right: -10px;
    }
  }
</style>

<script>
  import { EasterEggManager } from '../../utils/easter-eggs';

  const dropdown = document.getElementById('trophy-dropdown');
  const trophyBtn = document.getElementById('trophy-btn');
  const resetBtn = document.getElementById('reset-trophies-btn');
  const trophyItems = document.querySelectorAll('.trophy-item');

  let isOpen = false;

  // Update trophy states based on localStorage
  function updateTrophyStates() {
    const unlocked = EasterEggManager.getUnlockedTrophies();
    
    trophyItems.forEach((item) => {
      const trophyId = item.getAttribute('data-trophy-id');
      if (!trophyId) return;

      const isUnlocked = unlocked.has(trophyId);
      
      if (isUnlocked) {
        item.classList.remove('locked');
        item.classList.add('unlocked');
      } else {
        item.classList.remove('unlocked');
        item.classList.add('locked');
      }
    });
  }

  // Toggle dropdown visibility
  function toggleDropdown() {
    if (!dropdown) return;

    isOpen = !isOpen;

    if (isOpen) {
      updateTrophyStates();
      dropdown.classList.remove('hidden');
      setTimeout(() => dropdown.classList.add('show'), 10);
    } else {
      dropdown.classList.remove('show');
      setTimeout(() => dropdown.classList.add('hidden'), 200);
    }
  }

  // Toggle on button click
  trophyBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    toggleDropdown();
  });

  // Close when clicking outside
  document.addEventListener('click', (e) => {
    if (isOpen && dropdown && !dropdown.contains(e.target as Node) && e.target !== trophyBtn) {
      toggleDropdown();
    }
  });

  // Reset progress
  resetBtn?.addEventListener('click', (e) => {
    e.stopPropagation();
    EasterEggManager.resetProgress();
    updateTrophyStates();
  });

  // Update dropdown when trophies change
  (window as any).refreshTrophyDropdown = updateTrophyStates;

  // Initial state update
  updateTrophyStates();
</script>
